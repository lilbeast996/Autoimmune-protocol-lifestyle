<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_recipe.AddRecipeActivity"
    android:id="@+id/ll_addrecipe">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/iv_food_add"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_upload"
            android:text="Select Image"
            android:textStyle="bold"
            android:fontFamily="@font/plus_jakarta_sans"
            android:textColor="@color/dark_grey"
            android:textSize="15dp"
            android:onClick="selectImage"
            />

        <EditText
            android:id="@+id/tv_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Recipe Name"
            android:textSize="19sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/plus_jakarta_sans"/>

        <EditText
            android:id="@+id/tv_add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Description"
            android:textSize="19sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/plus_jakarta_sans"/>

        <EditText
            android:id="@+id/tv_add_prep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Cook Time"
            android:textSize="19sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/plus_jakarta_sans"/>

        <EditText
            android:id="@+id/tv_add_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Ingredients (eg.: potatoes, onion...)"
            android:textSize="19sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/plus_jakarta_sans"/>

        <EditText
            android:id="@+id/tv_add_recipe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Recipe"
            android:textSize="19sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/plus_jakarta_sans"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_design_upload"
            android:text="Upload Recipe"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:fontFamily="@font/plus_jakarta_sans"
            android:textSize="20dp"
            />

    </LinearLayout>
</ScrollView>
</LinearLayout>